<!--                    android:id="@+id/editAttachmentsFolder"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:inputType="text" />-->

<!--        </com.google.android.material.textfield.TextInputLayout>-->
