<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Настройки интеграции с Obsidian"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

        <!-- Выбор корня хранилища -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Выберите корень хранилища Obsidian (Vault):"
                android:layout_marginBottom="8dp" />

        <Button
                android:id="@+id/btnSelectVaultRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выбрать папку Vault" />

        <TextView
                android:id="@+id/tvVaultRootPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Путь не выбран"
                android:textSize="12sp"
                android:textColor="#666" />

        <!-- Ввод относительной папки -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Папка внутри Vault для ссылок-заметок:"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Например: Ссылки, Inbox, Web">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editRelativeFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Будет сохранять в: [Vault]/[Папка]"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#888" />

        <!-- Ввод названия тега -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Тег для созданых заметок (опционально):"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Например: cсылка">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
                android:id="@+id/tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Будет назначаться тег: [тег]/[хост сайта-источника]"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#888" />

        <!-- Ввод относительной папки для вложений -->
